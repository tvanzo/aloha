<div class="col-lg-6">

      <ul class="list-group media-list media-list-stream mb-4">
        
       
         
        <li class="media list-group-item p-4">
          <img
            class="media-object d-flex align-self-start mr-3"
            src="assets/img/avatar-fat.jpg">
          <div class="media-body">
            <div class="media-body-text">
              <div class="media-heading">
                <small class="float-right text-muted"><%= @post.created_at %></small>
                <h6></h6>
              </div>
              <p>
                <%=link_to(@user.email, "/users/#{@user.id}")%>
              </p>
              <p>
               <%= @post.content %>
              </p>
              <% if Like.find_by(user_id: current_user.id, post_id: @post.id) %>
        <!-- Rewrite the following line to a link to the "destroy" action -->
        <%= link_to("/likes/#{@post.id}/destroy", {method: "post"}) do %>
        <span class="fa fa-heart like-btn-unlike"></span>
        <%end%>
      <% else %>
       <%= link_to("/likes/#{@post.id}/create", {method: "post"}) do%>
        <span class="fa fa-heart like-btn"></span>
      <% end %>
      <% end %>
      <%= @likes_count %>
              <small class="float-right text-muted"><%= link_to("Delete", "/posts/#{@post.id}/destroy", {method: "post"}) %></small>
              
            </div>
          </div>
        </li>
       
        
      </ul>
    </div>